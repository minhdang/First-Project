- content_for :page_title, t('user_needs.edit_need')

- content_for :title do
  = link_to t('user_needs.delete_need'), user_need_path(@user, @need), :class => 'delete-need-button', :method => :delete
  = yield :page_title
  
- content_for :sidebar, render(:partial => 'users/profile_sidebar', :locals => {:user => @user})

- form_for @need, :url => user_need_path(@user, @need), :method => :put do |f|
  = render :partial => 'needs/fields', :locals => { :f => f }
  %div= f.submit