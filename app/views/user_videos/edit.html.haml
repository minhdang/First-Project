- content_for :page_title, t('user_videos.edit.title')
- content_for :title do
  = button_to t('user_videos.edit.delete'), user_video_path(@user, @user_video), :method => :delete, :confirm => t('user_videos.edit.delete_confirm'), :class => 'delete-user-video-button'
  Edit Video
  
- content_for :sidebar, render(:partial => 'users/profile_sidebar', :locals => {:user => @user})
  
- form_for @user_video, :url => user_video_path(@user, @user_video) do |f|
  
  = f.error_messages

  = required_field_legend

  %div
    = f.label :title, t('user_videos.edit.video_title')
    = f.text_field :title
  %div
    = f.label :description, t('user_videos.edit.video_description')
    = f.text_area :description
  %div
    = image_tag @user_video.screen_shot.url
    
  %div= f.submit