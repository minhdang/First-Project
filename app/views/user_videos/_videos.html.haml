- style ||= :tiny
- break_after ||= 4
%ul.user-videos
  - videos.each_with_index do |video, count|
    %li= link_to(image_tag(video.screen_shot.url(style), :alt => "#{video.title}", :class => 'video'), user_video_path(video.user, video))
    - if (((count + 1) % break_after) == 0)
      %li.clear-left 
.clear-left