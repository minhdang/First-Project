- content_for :page_title, "#{@user.login}" + t('user_videos.title')

- content_for :title do
  = "#{@user.login}" + t('user_videos.title')
  
- content_for :sidebar, render(:partial => 'users/profile_sidebar', :locals => {:user => @user})

= link_to t('user_videos.add_video'), new_user_video_path(@user), :class => 'add-user-video-button button green bigrounded' if current_user == @user
  
- @user_videos.each do |user_video|
  - div_for user_video do
    %h1= title_as_edit_link_if_owner(user_video)
    %p= user_video.description
    = embed_video(user_video)