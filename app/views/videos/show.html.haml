- content_for :title, @video.title

- content_for :sidebar do
  
  = render :partial => 'videos/sidebar'

= render :partial => 'shared/video_player_js'

.video= display_video(@video.video)

%p= free_video_message(@video, t('videos.show.message'))
    
%p
  = @video.description
  = render :partial => 'shared/social_buttons', :locals => { :url =>  'http://edisonnation.com/'+request.env['REQUEST_URI'] } if @video.free?
