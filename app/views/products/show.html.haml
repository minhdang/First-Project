- content_for :page_title, "#{h @store.name} &raquo; #{h @product.name}"
- content_for :title, "#{link_to h(@store.name), store_path(@store)} &raquo; #{h @product.name}"

- content_for :sidebar, render(:partial => 'carts/mini')

#description.textile= @product.detailed_description_html

#product-sidebar
  
  #media{:style => 'margin:0 0 2px;'}= @product.sidebar_html
  .div{:style => 'padding:0 0 0 7px'}
    = render :partial => 'shared/social_buttons', :locals => { :url =>  'http://edisonnation.com/'+request.env['REQUEST_URI'] }
  %br.clear
  #add-to-cart
    - if @product.url == 'loopa'
      %br
      %div{:style => "text-align: center; padding: 1em; border: 1px solid #F66; background-color: #FEE"}
        %strong= t('products.out_of_stock')
    - else
      = render :partial => 'add_to_cart_form', :locals => {:product => @product}
  %br.clear 
    
