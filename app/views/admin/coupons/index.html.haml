- content_for :page_title, "Coupons"

%h1 Coupons


%table.data
  %thead
    %tr
      %th ID
      %th Code
      %th Redemptions
      %th
  %tbody
    - @coupons.each do |coupon|
      %tr
        %td= coupon.id
        %td= link_to h(coupon.code), admin_coupon_path(coupon)
        %td= coupon.redemptions
        %td.actions
          = link_to 'Edit', edit_admin_coupon_path(coupon)
          = link_to 'Destroy', admin_coupon_path(coupon), :method => :delete, :confirm => 'Are you sure you want to delete this coupon? You cannot undo this action.'