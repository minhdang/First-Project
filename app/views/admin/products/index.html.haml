- content_for :page_title, "#{h @store.name} - Products"

%h1= "#{h @store.name} - Products"

= will_paginate @products

%table.data
  %thead
    %tr
      %th ID
      %th Name
      %th Description
      %th
  %tbody
    - @products.each do |product|
      %tr
        %td= product.id
        %td= link_to h(product.name), admin_store_product_path(@store, product)
        %td.textile= product.description_html
        %td.actions
          = link_to 'Edit', edit_admin_store_product_path(@store, product)
          = link_to 'Destroy', admin_store_product_path(@store, product), :method => :delete, :confirm => 'Are you sure you want to delete this product? You cannot undo this action.'

= will_paginate @products