- content_for :page_title, 'Groups'

%h1= "Groups"

= will_paginate @groups

%table.data
  %thead
    %tr
      %th ID
      %th Title
      %th Members
      %th Owner
      %th
  %tbody
    - @groups.each do |group|
      %tr
        %td= group.id
        %td= link_to h(group.title), admin_group_path(group)
        %td= group.members_count
        %td
          = link_to group.owner.name, admin_user_path(group.owner)
          = "(#{group.owner.login})"
        %td.actions
          = link_to 'Edit', edit_admin_group_path(group)
          = link_to 'Destroy', admin_group_path(group), :method => :delete, :confirm => 'Are you sure?'

= will_paginate @groups