- content_for :page_title, 'Insiders Lounge Announcements'


%table.data
  %thead
    %tr
      %th Title
      %th 
      %th
  %tbody
    -@announcements.each do |announcement|
      %tr
        %td= announcement.title
        %td
          = link_to 'Edit', edit_admin_lounge_announcement_path(announcement)
          = link_to 'View', admin_lounge_announcement_path(announcement)
          = link_to 'Delete', admin_lounge_announcement_path(announcement), :method => :delete, :confirm => "Are you sure? This can't be undone, m'kay", :class => 'action'

  
  